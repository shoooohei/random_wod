<%= link_to '< WOD一覧', wods_path, class: 'btn btn-secondary my-3' %>
<h1>WOD詳細</h1>
<%= render 'shared/wod_detail', wod: @wod %>

<h2>ログ</h2>
<% @logs.each do |log| %>
  <div class="row mt-3">
    <div class="col-8">
      <%= log.date %>
    </div>
    <div class="col-4">
      <%= link_to '詳細', wod_log_path(@wod, log), class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
<%= link_to 'ログを追加', new_wod_log_path(@wod), class: 'btn btn-dark mt-3' %>
